@{
    const string SiteName = "EBuy: The ASP.NET MVC Demo Site";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title - @SiteName</title>
    <link href="@Url.Content("~/Content/Site.mobile.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.mobile-1.1.0.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.mobile.structure-1.1.0.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.mobile.theme-1.1.0.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.mobile-1.1.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/AjaxLogin.js")" type="text/javascript"></script>
</head>
<body>
    <div data-role="page" data-theme="b">
        <header data-role="header">
            <h1>@Html.ActionLink(SiteName, "Index", "Home")</h1>
        </header>
        <div id="body" data-role="content">
            @RenderBody()
        </div>
        <div data-role="footer">
            @Html.Partial("_ViewSwitcher")
        </div>
    </div>
</body>
</html>
